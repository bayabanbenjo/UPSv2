<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPlant">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#06C2CC"
        android:id="@+id/header_title"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:onClick="Back"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Plant"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/category_name_tv"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/imgcont"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:id="@+id/add_plant_img"
            android:src="@drawable/add_img"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/name_of_plant"
            android:background="@drawable/custom_et_bg"
            android:hint="Plant's Name"
            android:textSize="13sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/desc_of_plant"
            android:background="@drawable/custom_et_bg"
            android:hint="Plant Description"
            android:textSize="13sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/price_of_plant"
            android:inputType="number"
            android:background="@drawable/custom_et_bg"
            android:hint="Price"
            android:textSize="13sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/watering"
            android:background="@drawable/custom_et_bg"
            android:hint="Watering Description"
            android:textSize="13sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/sunlight"
            android:background="@drawable/custom_et_bg"
            android:hint="Sunlight Description"
            android:textSize="13sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/temperature"
            android:background="@drawable/custom_et_bg"
            android:hint="Temperature Description"
            android:textSize="13sp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:backgroundTint="@null"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/button_background"
                android:id="@+id/save_add_plant"
                android:text="Save"/>

            <Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:backgroundTint="@null"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="#cd1818"
                android:id="@+id/cancel_add_plant"
                android:text="Cancel"/>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>