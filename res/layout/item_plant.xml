<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    android:background="#00000000"
    android:layout_marginTop="10dp"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/stroke_green"
        android:id="@+id/view_plant"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:id="@+id/available_plant_img"
            android:src="@drawable/plant"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#B4FE98"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_of_plant"
                android:fontFamily="@font/myfont"
                android:textColor="#0B4619"
                android:textSize="10sp"
                android:text="Pechay"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price_of_plant_tv"
                android:fontFamily="@font/myfont"
                android:layout_marginLeft="10dp"
                android:textColor="#D06224"
                android:textSize="10sp"
                android:text="Php:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price_of_plant"
                android:fontFamily="@font/myfont"
                android:layout_marginLeft="5dp"
                android:textColor="#D06224"
                android:textSize="10sp"
                android:text="0.00"/>

        </LinearLayout>





    </LinearLayout>






    </androidx.cardview.widget.CardView>
