<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <EditText
            android:padding="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Kamote"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/names"/>

        <ImageView
            android:layout_width="200dp"
            android:id="@+id/plant_image_popup"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/myplant"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AE431E"
                android:fontFamily="@font/myfont"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Php: "/>
            <EditText
                android:inputType="number"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#AE431E"
                android:id="@+id/price_of_plant_popup"
                android:fontFamily="@font/myfont"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="0.00"/>



        </LinearLayout>

        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scrollbars="vertical"
            android:fontFamily="@font/myfont"
            android:id="@+id/desc_popup"
            android:text="jdvhcdsgcdsgcxcxmckcndsfcyxccdsgcyfbxvxhzxvxvhghcvxhcxhzccbxjxbc "
            android:textColor="#0B4619"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="90dp"
                    android:background="#D3E4CD"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/water_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/myfont"
                            android:layout_marginLeft="10dp"
                            android:textSize="10sp"
                            android:text="Water"/>
                    </LinearLayout>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/water"
                        android:textSize="10sp"
                        android:fontFamily="@font/myfont"
                        android:text="jsgcgchxcgcxcgxhjhxcgxhj"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="90dp"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#D3E4CD"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/sun_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/myfont"
                            android:layout_marginLeft="10dp"
                            android:textSize="10sp"
                            android:text="Sunlight"/>
                    </LinearLayout>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sunlight"
                        android:textSize="10sp"
                        android:fontFamily="@font/myfont"
                        android:text="jsgcgchxcgcxcgxhjhxcgxhj"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="90dp"
                    android:background="#D3E4CD"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/temp_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/myfont"
                            android:textSize="10sp"
                            android:text="Temperature"/>
                    </LinearLayout>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/temperature"
                        android:textSize="10sp"
                        android:fontFamily="@font/myfont"
                        android:text="jsgcgchxcgcxcgxhjhxcgxhj"/>


                </LinearLayout>



            </LinearLayout>



        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                android:id="@+id/remove"
                android:background="@drawable/button_background"
                android:fontFamily="@font/myfont"
                android:text="Remove"/>

            <Button
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                android:id="@+id/update"
                android:background="@drawable/button_background"
                android:fontFamily="@font/myfont"
                android:text="Update"/>


        </LinearLayout>









    </LinearLayout>

</RelativeLayout>